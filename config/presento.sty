\newcommand{\fontsizeone}{2.292em}
\newcommand{\linespaceone}{1}
\newcommand{\fontsizetwo}{1.618em}
\newcommand{\fontsizethree}{0.875em}
\newcommand{\fontfamilyone}{Proxima Nova Bold}
\newcommand{\fontfamilytwo}{Noto Sans}

% beamer template changes
\setbeamercolor{normal text}{fg=colorthree} %tone down the default black to dark gray
\setsansfont{\fontfamilytwo}

% custom commands
\newcommand{\settitle}[1]{
  {
  \begin{spacing}{\linespaceone}
   \fontsize{\fontsizeone}{\fontsizeone}\fontspec{\fontfamilyone}\color{colorone}{#1}
  \end{spacing}
  }
}

\newcommand{\setsubtitle}[1]{
 {\fontsize{\fontsizetwo}{\fontsizeone}\selectfont{#1}}
}

\newcommand{\setnote}[1]{
 {\fontsize{\fontsizethree}{\fontsizeone}\selectfont\color{colortwo}{#1}}
}